<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/tequila_settings_statusbar" >

    <!-- System UI Tuner -->
    <Preference
        android:key="system_ui_tuner"
        android:title="@string/system_ui_tuner"
        android:summary="@string/system_ui_tuner_summary">
        <intent android:action="com.android.settings.action.STATUS_BAR_TUNER"/>
    </Preference>

    <com.tequila.support.preferences.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_to_sleep_title"
        android:summary="@string/double_tap_to_sleep_summary"
        android:defaultValue="false"/>

    <SwitchPreference
        android:key="enable_combined_signal_icons"
        android:title="@string/combined_status_bar_signal_icons_title"
        android:summary="@string/combined_status_bar_signal_icons_summary"
        android:defaultValue="true" />
    
    <PreferenceCategory
        android:title="@string/battery_options">

        <com.tequila.support.preferences.SystemSettingListPreference
            android:key="status_bar_battery_style"
            android:title="@string/battery_style_title"
            android:dialogTitle="@string/battery_style_title"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:persistent="false" />
        
        <com.tequila.support.preferences.SystemSettingSwitchPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/battery_percent_title"
            android:summary="@string/battery_percent_summary"
            android:defaultValue="false"
            android:persistent="false" />

        <com.tequila.support.preferences.SystemSettingSwitchPreference
            android:key="status_bar_show_battery_percent_inside"
            android:title="@string/battery_percent_inside_title"
            android:summary="@string/battery_percent_inside_summary"
            android:defaultValue="false" />

        <com.tequila.support.preferences.SystemSettingSwitchPreference
            android:key="status_bar_show_battery_percent_charging"
            android:title="@string/show_battery_percent_charging_title"
            android:summary="@string/show_battery_percent_charging_summary"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>
