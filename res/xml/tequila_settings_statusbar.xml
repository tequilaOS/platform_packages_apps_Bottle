<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/tequila_settings_statusbar" >

    <!-- System UI Tuner -->
    <Preference
        android:key="system_ui_tuner"
        android:title="@string/system_ui_tuner"
        android:summary="@string/system_ui_tuner_summary">
        <intent android:action="com.android.settings.action.STATUS_BAR_TUNER"/>
    </Preference>

    <com.tequila.support.preferences.SystemSettingSwitchPreference
            android:key="show_fourg_icon"
            android:title="@string/show_fourg_icon_title"
            android:summary="@string/show_fourg_icon_summary"
            android:defaultValue="false"/>

    <com.tequila.support.preferences.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_to_sleep_title"
        android:summary="@string/double_tap_to_sleep_summary"
        android:defaultValue="false"/>

    <com.tequila.support.preferences.SystemSettingSwitchPreference
        android:key="data_disabled_icon"
        android:title="@string/data_disabled_icon_title"
        android:summary="@string/data_disabled_icon_summary"
        android:defaultValue="false"/>

    <PreferenceCategory
        android:title="@string/battery_options_title"/>

        <com.tequila.support.preferences.SystemSettingListPreference
            android:key="status_bar_battery_style"
            android:title="@string/battery_style_title"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:summary="%s"
            android:defaultValue="0" />

        <com.tequila.support.preferences.SystemSettingSwitchPreference
            android:key="status_bar_battery_show_percent"
            android:title="@string/battery_percent_title"
            android:summary="@string/battery_percent_summary"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/status_bar_clock_title"/>

    <com.tequila.support.preferences.SystemSettingListPreference
        android:key="status_bar_clock"
        android:title="@string/status_bar_clock_pos_title"
        android:dialogTitle="@string/status_bar_clock_pos_title"
        android:entries="@array/status_bar_clock_pos_entries"
        android:entryValues="@array/status_bar_clock_pos_values" />

    <com.tequila.support.preferences.SystemSettingListPreference
        android:key="status_bar_am_pm"
        android:title="@string/status_bar_am_pm_title"
        android:dialogTitle="@string/status_bar_am_pm_title"
        android:entries="@array/status_bar_am_pm_entries"
        android:entryValues="@array/status_bar_am_pm_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/network_options">

        <Preference
            android:key="network_traffic"
            android:title="@string/network_traffic_state_title"
            android:summary="@string/network_traffic_state_summary"
            android:fragment="com.tequila.settings.fragments.NetTrafficMonSettings" />

    </PreferenceCategory>

</PreferenceScreen>
